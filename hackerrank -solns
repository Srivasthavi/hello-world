#4:https://www.hackerrank.com/challenges/java-loops-i/problem

import java.util.*;
public class Sol
{
    public static void main(String args[])
    {
        Scanner obj=new Scanner(System.in);
        int a=obj.nextInt();
        if(a>1 && a<21)
        {
        for(int i=1;i<11;i++)
        {
            System.out.println(a+" x "+i+" = "+(a*i));
        }
        }
    }
}
--------------------------------------------------------------------------------
#5:https://www.hackerrank.com/challenges/java-loops/problem

import java.util.*;
import java.io.*;

class Solution{
    public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        int t=in.nextInt();
        for(int i=0;i<t;i++){
                int result = 0;
                int a = in.nextInt();
                int b = in.nextInt();
                int n = in.nextInt();

                for (int j = 0; j < n; j++ ){
                    if(j==0){
                        result = result + (a + (int)Math.pow(2,j) * b);
                    }
                    else{
                        result = result + ((int)Math.pow(2,j) * b);
                    }
                    System.out.print(result+" ");
                }
                System.out.println();
            }
        in.close();
    }
}
