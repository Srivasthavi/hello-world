#2:https://www.hackerrank.com/challenges/java-stdin-and-stdout-1/problem

import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
      int a[]=new int[3];
      for(int i=0;i<3;i++)
      {
          a[i]=scan.nextInt();
      }
      for(int j=0;j<3;j++)
      {
          System.out.println(a[j]);
      }
    }
}
