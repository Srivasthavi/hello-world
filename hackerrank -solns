#3:https://www.hackerrank.com/challenges/java-if-else/problem

import java.util.*;
public class Trial
{
    public static void main(String args[])
    {

        Scanner obj=new Scanner(System.in);
        int a=obj.nextInt();
        if(a>0 && a<101)
        {
        if (a%2==0)
        {
            if(a>1 && a<6)System.out.println("Not Weird");
            else if(a>5 && a<21)System.out.println("Weird");
            else System.out.println("Not Weird");
        }
        else System.out.println("Weird");
        }
        else System.out.println("Not Weird");
    }
}
